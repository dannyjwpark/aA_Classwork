<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> %>
  </head>

  <body>
    <nav class="main-nav">
    <h1><a href="<%= users_url %>">Music App</a></h1>
    <div>
    <% if current_user.nil? %>
      <p> Logged Out </p>
      <a href="<%= new_sessions_url %>"><%= highlight "Sign in" %></a>
      <a href="<%= new_user_url %>"><%= highlight "Sign up" %></a>
    <% else %>
      <p> Logged In as: <%= highlight current_user.email %> </p>
      <form action="<%= session_url %>" method="post">
        <%= auth_token %>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Logout">
      </form>
    <% end %>
    </div>
    </nav>   

    <main>
      <%= yield %>
    </main>

  <br>
  <br>
    <footer class="footer">
      <%= highlight "MusicAppâ„¢" %>
      <%= yield :footer %>
    </footer>

  </body>
</html>
