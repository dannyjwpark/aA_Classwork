<section class="page"><div class="centered-box">
    <h1>Sign in</h1>

      <%# <%= render "shared/errors" %> 

    <form action="<%= sessions_url %>" method="post">
      <%= auth_token %>
      <label for="user_username"><%= highlight "User Email" %></label>
      <input type="text" name="user[username]" id="user_username">
      <br>

      <label for="user_password"><%= highlight "Password" %></label>
      <input type="password" name="user[password]" id="user_password">
      <br>

      <input type="submit">
    </form>
</div></section>
