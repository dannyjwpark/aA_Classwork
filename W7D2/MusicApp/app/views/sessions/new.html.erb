<h2 class='page-header'>Sign-in</h2>

<a class='button' href=<%= new_user_url %> >Go to Sign-up!</a>

<form class='form' action="<%= sessions_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <p>
      <label for="user_username"><%= highlight "User Email" %></label>
      <input type="text" name="user[username]" id="user_username">
  </p>

  <p>
      <label for="user_password"><%= highlight "Password" %></label>
      <input type="password" name="user[password]" id="user_password">
  </p>

  <input type="submit">
</form>
